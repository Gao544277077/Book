doctype html
html
    head
        meta(charset="utf-8")
        title webapp with firebase
        script(src="https://www.gstatic.com/firebasejs/4.1.3/firebase.js")
        
    body
        h1
            a(href="/") Server Side JS with Firebase

        ul
            each row in data_key
                li
                    -id= row
                    a(href="/"+id)= data_val[row]['title']
    

        article
            -id= datum_key
            form(action="/" + id + "/delete" method="post")
                p
                    h2= datum["title"]
                p
input(type='submit' value="DELETE")